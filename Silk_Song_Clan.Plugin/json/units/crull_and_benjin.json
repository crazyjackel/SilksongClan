{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnCrullAndBenjin",
      "names": {
        "english": "Crull and Benjin",
        "french": "Crull and Benjin"
      },
      "card_art": "@CrullAndBenjinCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@Silksong",
      "unlock_level": 9,
      "pools": [
        "MegaPool",
        "UnitsAllBanner"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnCrullAndBenjinEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A duo of bugs that grow stronger when hungry and work together with Yarnaby for protection."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "CrullAndBenjin",
      "names": {
        "english": "Crull and Benjin",
        "french": "Crull and Benjin"
      },
      "character_art": "@CrullAndBenjinCharacterArt",
      "size": 1,
      "health": 8,
      "attack_damage": 8,
      "subtypes": ["@Bug", "SubtypesData_BannerUnit"],
      "triggers": [
        {
          "id": "@CrullHungerTrigger"
        },
        {
          "id": "@CrullAndBenjinComboYarnabyTrigger"
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "CrullHungerTrigger",
      "descriptions": {
        "english": "Apply +[effect0.upgrade.bonusdamage][attack] and +[effect0.upgrade.bonushp][health]"
      },
      "trigger": "on_food_spawn",
      "effects": [
        {
          "id": "@CrullAndBenjinHungerEffect"
        }
      ]
    },
    {
      "id": "CrullAndBenjinComboYarnabyTrigger",
      "descriptions": {
        "english": "[Silk_Song_Clan.Plugin_Combo] with Yarnaby: Spend [effect1.powerabs] [coin]. Friendly Units gain [Silk_Song_Clan.Plugin_PermanentProtection] [effect2.status0.power]."
      },
      "trigger": "on_spawn",
      "effects": [
        {
          "id": "@CrullAndBenjinYarnabyEffect"
        },
        {
          "id": "@CrullAndBenjinSpendGoldEffect"
        },
        {
          "id": "@CrullAndBenjinProtectionEffect"
        }
      ]
    }
  ],
  "upgrades": [
    {
      "id": "CrullHungerUpgrade",
      "bonus_damage": 3,
      "bonus_health": 3
    }
  ],
  "effects": [
    {
      "id": "SpawnCrullAndBenjinEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@CrullAndBenjin"
    },
    {
      "id": "CrullAndBenjinHungerEffect",
      "name": "CardEffectAddTempCardUpgradeToUnits",
      "target_mode": "self",
      "target_team": "monsters",
      "param_upgrade": "@CrullHungerUpgrade"
    },
    {
      "id": "CrullAndBenjinYarnabyEffect",
      "name": "@CardEffectTestLastCardName",
      "should_test": true,
      "should_cancel_subsequent_effects_if_test_fails": true,
      "param_str": "@SpawnYarnaby"
    },
    {
      "id": "CrullAndBenjinSpendGoldEffect",
      "name": "CardEffectRewardGold",
      "param_int": -30,
      "should_test": true,
      "should_cancel_subsequent_effects_if_test_fails": true,
      "param_str": "@SpawnYarnaby"
    },
    {
      "id": "CrullAndBenjinProtectionEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "room",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "@PermanentProtection",
          "count": 10
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "CrullAndBenjinCardArt",
      "path": "textures/CrullAndBenjinCardArt.png"
    },
    {
      "id": "CrullAndBenjinCharacterArt",
      "path": "textures/CrullAndBenjinCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "CrullAndBenjinCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@CrullAndBenjinCardArt"
        }
      }
    },
    {
      "id": "CrullAndBenjinCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@CrullAndBenjinCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.5,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
  ]
}
