{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnTwelfthArchitect",
      "names": {
        "english": "Twelfth Architect"
      },
      "card_art": "@TwelfthArchitectCardArt",
      "cost": 2,
      "card_type": "monster",
      "rarity": "rare",
      "class": "@Silksong",
      "pools": [
        "MegaPool",
        "UnitsAllBanner"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnTwelfthArchitectEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A master builder who can create relics that enhance steward equipment capabilities."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "TwelfthArchitect",
      "names": {
        "english": "Twelfth Architect",
        "french": "Twelfth Architect"
      },
      "character_art": "@TwelfthArchitectCharacterArt",
      "size": 3,
      "health": 25,
      "attack_damage": 45,
      "subtypes": [
        "SubtypesData_TrainSteward",
        "SubtypesData_BannerUnit"
      ],
      "triggers": [
        {
          "id": "@TwelfthArchitectCelebrateTrigger"
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "TwelfthArchitectCelebrateTrigger",
      "descriptions": {
        "english": "Spend 100 [coin]. Gain a Relic allowing Stewards to Equip an additional Equipment."
      },
      "trigger": "on_encounter_complete",
      "effects": [
        {
          "id": "@TwelfthArchitectSpendGoldEffect"
        },
        {
          "id": "@TwelfthArchitectCreateRelicEffect"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnTwelfthArchitectEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@TwelfthArchitect"
    },
    {
      "id": "TwelfthArchitectSpendGoldEffect",
      "name": "CardEffectRewardGold",
      "target_mode": "self",
      "param_int": -100,
      "should_test": true,
      "should_cancel_subsequent_effects_if_test_fails": true
    },
    {
      "id": "TwelfthArchitectCreateRelicEffect",
      "name": "@CardEffectAddRelic",
      "param_str": "@ArchitectKey"
    }
  ],
  "sprites": [
    {
      "id": "TwelfthArchitectCardArt",
      "path": "textures/TwelfthArchitectCardArt.png"
    },
    {
      "id": "TwelfthArchitectCharacterArt",
      "path": "textures/TwelfthArchitectCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "TwelfthArchitectCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@TwelfthArchitectCardArt"
        }
      }
    },
    {
      "id": "TwelfthArchitectCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@TwelfthArchitectCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 0,
              "z": 0
            },
            "scale": {
              "x": 1.5,
              "y": 1.5,
              "z": 1
            }
          }
        }
      }
    }
  ]
}