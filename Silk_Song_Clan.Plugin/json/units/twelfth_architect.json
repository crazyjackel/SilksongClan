{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnTwelfthArchitect",
      "names": {
        "english": "Twelfth Architect",
        "chinese": "第十二席建筑师"
      },
      "card_art": "@TwelfthArchitectCardArt",
      "cost": 2,
      "card_type": "monster",
      "rarity": "rare",
      "class": "@Silksong",
      "pools": [
        "MegaPool",
        "UnitsAllBanner"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnTwelfthArchitectEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "Do you ask-need our service? We shall create, as is our d-d-directive. To serve, for Pharloom eternal.",
          "chinese": "您需要我们的服务吗？按照下达的指令，我们会为您制-制-制造。为永恒的纺都效劳。"
        }
      ]
    }
  ],
  "additional_tooltips": [
    {
      "id": "ArchitectKeyTooltip",
      "titles": {
        "english": "Architect's Key",
        "chinese": "建筑师的钥匙"
      },
      "descriptions": {
        "english": "Whenever a unit is moved, it gains [valor] 1.",
        "chinese": "每当一个单位移动时，它获得[valor] 1。"
      },
      "style": "relic_title",
      "allow_secondary_placement": true
    }
  ],
  "characters": [
    {
      "id": "TwelfthArchitect",
      "names": {
        "english": "Twelfth Architect",
        "chinese": "第十二席建筑师",
        "french": "Twelfth Architect"
      },
      "character_art": "@TwelfthArchitectCharacterArt",
      "size": 4,
      "health": 45,
      "attack_damage": 25,
      "subtypes": [
        "SubtypesData_TrainSteward",
        "SubtypesData_BannerUnit"
      ],
      "triggers": [
        {
          "id": "@TwelfthArchitectCelebrateTrigger"
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "TwelfthArchitectCelebrateTrigger",
      "descriptions": {
        "english": "Spend [effect0.powerabs] [coin]. Gain <b>Artifact</b>: Architect's Key.",
        "chinese": "花费 [effect0.powerabs][coin]。获得<b>神器</b>：建筑师的钥匙。"
      },
      "trigger": "on_encounter_complete",
      "effects": [
        {
          "id": "@TwelfthArchitectSpendGoldEffect"
        },
        {
          "id": "@TwelfthArchitectCreateRelicEffect"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnTwelfthArchitectEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@TwelfthArchitect"
    },
    {
      "id": "TwelfthArchitectSpendGoldEffect",
      "name": "CardEffectRewardGold",
      "target_mode": "self",
      "param_int": -100,
      "should_test": true,
      "should_cancel_subsequent_effects_if_test_fails": true
    },
    {
      "id": "TwelfthArchitectCreateRelicEffect",
      "name": "@CardEffectAddRelic",
      "param_str": "@ArchitectKey",
      "additional_tooltips": [
        "@ArchitectKeyTooltip"
      ]
    }
  ],
  "sprites": [
    {
      "id": "TwelfthArchitectCardArt",
      "path": "textures/TwelfthArchitectCardArt.png"
    },
    {
      "id": "TwelfthArchitectCharacterArt",
      "path": "textures/TwelfthArchitectCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "TwelfthArchitectCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@TwelfthArchitectCardArt"
        }
      }
    },
    {
      "id": "TwelfthArchitectCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@TwelfthArchitectCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.1,
              "z": 0
            },
            "scale": {
              "x": 1.3,
              "y": 1.3,
              "z": 1
            }
          }
        }
      }
    }
  ]
}