{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnKratt",
      "names": {
        "english": "Kratt",
        "french": "Kratt"
      },
      "card_art": "@KrattCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@Silksong",
      "unlock_level": 7,
      "pools": [
        "MegaPool"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnKrattEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A flea that can sacrifice others to empower the entire flea swarm."
        }
      ]
    },
    {
      "id": "KrattAbility",
      "names": {
        "english": "Send to Hot Spring"
      },
      "descriptions": {
        "english": "Sacrifice a Flea. Fleas get + [effect0.upgrade.bonusdamage] [attack] and + [effect0.upgrade.bonushealth] [health] and [damage shield] [effect0.upgrade.status0.power]"
      },
      "initial_cooldown": 1,
      "cooldown": 1,
      "is_an_ability": true,
      "targetless": false,
      "effects": [
        {
          "id": "@KrattSacrificeEffect"
        },
        {
          "id": "@KrattHotSpringEffect"
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Kratt",
      "names": {
        "english": "Kratt",
        "french": "Kratt"
      },
      "character_art": "@KrattCharacterArt",
      "size": 1,
      "health": 8,
      "attack": 10,
      "subtypes": [
        "@Flea"
      ],
      "ability": "@KrattAbility"
    }
  ],
  "upgrades": [
    {
      "id": "KrattHotSpringUpgrade",
      "bonus_damage": 5,
      "bonus_health": 5,
      "status_effect_upgrades": [
        {
          "status": "damage shield",
          "count": 1
        }
      ]
    }
  ],
  "upgrade_masks": [
    {
      "id": "KrattUpgradeMask",
      "required_subtypes": [
        "@Flea"
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnKrattEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "param_character": "@Kratt"
    },
    {
      "id": "KrattSacrificeEffect",
      "name": "CardEffectSacrifice",
      "target_mode": "drop_target_character",
      "param_subtype": "@Flea"
    },
    {
      "id": "KrattHotSpringEffect",
      "name": "@CardEffectAddCardUpgradeToUnitsFilter",
      "target_mode": "room",
      "target_team": "monsters",
      "param_upgrade": "@KrattHotSpringUpgrade",
      "param_card_filter": "@KrattUpgradeMask"
    }
  ],
  "sprites": [
    {
      "id": "KrattCardArt",
      "path": "textures/KrattCardArt.png"
    },
    {
      "id": "KrattCharacterArt",
      "path": "textures/KrattCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "KrattCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@KrattCardArt"
        }
      }
    },
    {
      "id": "KrattCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@KrattCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.5,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
  ]
}