{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnKratt",
      "names": {
        "english": "Kratt",
        "chinese": "克拉特",
        "french": "Kratt"
      },
      "card_art": "@KrattCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@Silksong",
      "unlock_level": 7,
      "pools": [
        "UnitsAllBanner"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnKrattEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "Poor little Kratt did not mean to steal a look! This old carriage needs constant care. I was only doing repairs! I had no intent to intrude! And I barely saw a thing!",
          "chinese": "可怜的小克拉特不是故意偷看的！<br>这辆老车需要时常保养。我只是在修车！无意闯入！我什么也没看见！"
        }
      ]
    },
    {
      "id": "KrattAbility",
      "names": {
        "english": "Send to Hot Spring",
        "chinese": "送到温泉"
      },
      "descriptions": {
        "english": "Gain [effect1.power] [Silk_Song_Clan.Plugin_Silk]. Friendly Units get +[effect2.upgrade.bonusdamage] [attack] and +[effect2.upgrade.bonushp] [health] and [damageshield] [effect2.upgrade.status0.power].",
        "chinese": "获得 [effect0.power][Silk_Song_Clan.Plugin_Silk]。友方单位获得 +[effect2.upgrade.bonusdamage][attack]，+[effect2.upgrade.bonushp][health] 和[damageshield] [effect2.upgrade.status0.power]。战斗开始时处于冷却中。"
      },
      "initial_cooldown": 1,
      "cooldown": 1,
      "is_an_ability": true,
      "targetless": false,
      "effects": [
        {
          "id": "@KrattSacrificeEffect"
        },
        {
          "id": "@KrattGainSilkEffect"
        },
        {
          "id": "@KrattHotSpringEffect"
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Kratt",
      "names": {
        "english": "Kratt",
        "chinese": "克拉特",
        "french": "Kratt"
      },
      "character_art": "@KrattCharacterArt",
      "size": 1,
      "health": 8,
      "attack_damage": 10,
      "subtypes": [
        "@Flea",
        "SubtypesData_BannerUnit"
      ],
      "ability": "@KrattAbility"
    }
  ],
  "upgrades": [
    {
      "id": "KrattHotSpringUpgrade",
      "bonus_damage": 5,
      "bonus_hp": 5,
      "status_effect_upgrades": [
        {
          "status": "damage shield",
          "count": 1
        }
      ]
    }
  ],
  "upgrade_masks": [
    {
      "id": "KrattUpgradeMask",
      "card_type": "monster",
      "required_subtypes": [
        "@Flea"
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnKrattEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "param_character": "@Kratt"
    },
    {
      "id": "KrattSacrificeEffect",
      "name": "CardEffectSacrifice",
      "target_mode": "drop_target_character",
      "param_subtype": "@Flea"
    },
    {
      "id": "KrattGainSilkEffect",
      "name": "@CardEffectRewardSilk",
      "target_mode": "self",
      "param_int": 2,
      "additional_tooltips": [
        "@SilkTooltip"
      ]
    },
    {
      "id": "KrattHotSpringEffect",
      "name": "CardEffectAddCardUpgradeToUnits",
      "target_mode": "room",
      "target_team": "monsters",
      "param_upgrade": "@KrattHotSpringUpgrade"
    }
  ],
  "sprites": [
    {
      "id": "KrattCardArt",
      "path": "textures/KrattCardArt.png"
    },
    {
      "id": "KrattCharacterArt",
      "path": "textures/KrattCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "KrattCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@KrattCardArt"
        }
      }
    },
    {
      "id": "KrattCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@KrattCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 0.8,
              "z": 0
            },
            "scale": {
              "x": 1.4,
              "y": 1.4,
              "z": 1
            }
          }
        }
      }
    }
  ]
