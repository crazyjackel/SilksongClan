      "cooldown": 1,
      "initial_cooldown": 0,
      "targetless": true,
      "effects": [
        {
          "id": "@ZazaAddEquipmentEffect"
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Zaza",
      "size": 1,
      "health": 15,
      "attack": 15,
      "subtypes": [
        "@Bug"
      ],
      "triggers": [
        {
          "id": "@ZazaSpawnTrigger"
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "ZazaSpawnTrigger",
      "trigger": "on_spawn",
      "descriptions": {
        "english": "<b>Combo Garamond</b>: <b>Ability (Humble Steed)</b>: Add a random Equipment to Hand."
      },
      "effects": [
        {
          "id": "@ZazaSpawnEffect"
        }
      ]
    }
  ],
  "upgrades": [
    {
      "id": "ZazaComboUpgrade",
      "ability_upgrade": "@ZazaHumbleSteedAbility"
    }
  ],
  "effects": [
    {
      "id": "SpawnZazaEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "param_character": "@Zaza"
    },
    {
      "id": "ZazaSpawnEffect",
      "name": "@CardEffectAddCardUpgradeToUnitsOnLastCardName",
      "target_mode": "self",
      "target_team": "monsters",
      "param_upgrade": "@ZazaComboUpgrade",
      "param_str": "@Garamond"
    },
    {
      "id": "ZazaAddEquipmentEffect",
      "name": "CardEffectAddBattleCard",
      "target_mode": "hand",
      "param_card_type": "equipment",
      "param_card_pool": "EquipmentPool"
    }
  ],
  "sprites": [
    {
      "id": "ZazaCardArt",
      "path": "textures/ZazaCardArt.png"
    },
    {
      "id": "ZazaCharacterArt",
      "path": "textures/ZazaCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "ZazaCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@ZazaCardArt"
        }
      }
    },
    {
      "id": "ZazaCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@ZazaCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.5,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
