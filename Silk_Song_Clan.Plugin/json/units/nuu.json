{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnNuu",
      "names": {
        "english": "Nuu",
        "chinese": "努努",
        "french": "Nuu"
      },
      "card_art": "@NuuCardArt",
      "cost": 2,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@Silksong",
      "unlock_level": 10,
      "pools": [
        "MegaPool"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnNuuEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A mysterious bug that gains power through both harvest and hunger."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Nuu",
      "names": {
        "english": "Nuu",
        "chinese": "努努",
        "french": "Nuu"
      },
      "character_art": "@NuuCharacterArt",
      "size": 2,
      "health": 2,
      "attack_damage": 2,
      "subtypes": [
        "@Bug"
      ],
      "triggers": [
        {
          "id": "@NuuHarvestTrigger"
        },
        {
          "id": "@NuuHungerTrigger"
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "NuuHarvestTrigger",
      "descriptions": {
        "english": "Harvest: Gain 1 Permanent Imbue and 1 Permanent Protection."
      },
      "trigger": "on_any_unit_death_on_floor",
      "effects": [
        {
          "id": "@NuuHarvestEffect"
        }
      ]
    },
    {
      "id": "NuuHungerTrigger",
      "descriptions": {
        "english": "Hunger: Gain 1 Permanent Imbue and 1 Permanent Protection"
      },
      "trigger": "on_food_spawn",
      "effects": [
        {
          "id": "@NuuHungerEffect"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnNuuEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@Nuu"
    },
    {
      "id": "NuuHarvestEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "self",
      "param_status_effects": [
        {
          "status": "@PermanentImbue",
          "count": 2
        },
        {
          "status": "@PermanentProtection",
          "count": 2
        }
      ]
    },
    {
      "id": "NuuHungerEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "self",
      "param_status_effects": [
        {
          "status": "@PermanentImbue",
          "count": 2
        },
        {
          "status": "@PermanentProtection",
          "count": 2
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "NuuCardArt",
      "path": "textures/NuuCardArt.png"
    },
    {
      "id": "NuuCharacterArt",
      "path": "textures/NuuCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "NuuCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@NuuCardArt"
        }
      }
    },
    {
      "id": "NuuCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@NuuCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.5,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
  ]
}
