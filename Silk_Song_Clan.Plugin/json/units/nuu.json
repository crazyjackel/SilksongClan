{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnNuu",
      "names": {
        "english": "Nuu",
        "chinese": "努努",
        "french": "Nuu"
      },
      "card_art": "@NuuCardArt",
      "cost": 2,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@Silksong",
      "unlock_level": 10,
      "pools": [
        "UnitsAllBanner"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnNuuEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "Is hard work, learning so much from creatures, but for Nuu is very fulfilling. Now go and hunt, and prey, miss grown-up!",
          "chinese": "研究生物很辛苦，但是努努超满足！快去打猎吧大姐姐！"
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Nuu",
      "names": {
        "english": "Nuu",
        "chinese": "努努",
        "french": "Nuu"
      },
      "character_art": "@NuuCharacterArt",
      "size": 2,
      "health": 2,
      "attack_damage": 2,
      "subtypes": [
        "@Bug",
        "SubtypesData_BannerUnit"
      ],
      "triggers": [ "@NuuHungerTrigger", "@NuuHarvestTrigger" ]
    }
  ],
  "character_triggers": [
    {
      "id": "NuuHarvestTrigger",
      "descriptions": {
        "english": "Add an uncommon or rare Morsel unit to your hand.",
        "chinese": "将 1 个高级或稀有[snack]单位加入你的手牌。"
      },
      "trigger": "on_any_unit_death_on_floor",
      "effects": [
        {
          "id": "@NuuHarvestEffect"
        }
      ]
    },
    {
      "id": "NuuHungerTrigger",
      "descriptions": {
        "english": "Apply [effect0.status0.power] [Silk_Song_Clan.Plugin_PermanentImbue] and [effect1.status0.power] [Silk_Song_Clan.Plugin_PermanentProtection]",
        "chinese": "获得[Silk_Song_Clan.Plugin_PermanentImbue] [effect0.status0.power] 和[Silk_Song_Clan.Plugin_PermanentProtection] [effect1.status0.power]。"
      },
      "trigger": "on_food_spawn",
      "effects": [
        {
          "id": "@NuuImbueHungerEffect"
        },
        {
          "id": "@NuuProtectionHungerEffect"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnNuuEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@Nuu"
    },
    {
      "id": "NuuHarvestEffect",
      "name": "CardEffectAddBattleCard",
      "target_mode": "self",
      "param_card_pool": "@MorselPool",
      "param_int": 3,
      "param_int_2": 1
    },
    {
      "id": "NuuImbueHungerEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "self",
      "param_status_effects": [
        {
          "status": "@PermanentImbue",
          "count": 2
        }
      ]
    },
    {
      "id": "NuuProtectionHungerEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "self",
      "param_status_effects": [
        {
          "status": "@PermanentProtection",
          "count": 2
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "NuuCardArt",
      "path": "textures/NuuCardArt.png"
    },
    {
      "id": "NuuCharacterArt",
      "path": "textures/NuuCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "NuuCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@NuuCardArt"
        }
      }
    },
    {
      "id": "NuuCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@NuuCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 0.9,
              "z": 0
            },
            "scale": {
              "x": 1.2,
              "y": 1.2,
              "z": 1
            }
          }
        }
      }
    }
  ]
}
