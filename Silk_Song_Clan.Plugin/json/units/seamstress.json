{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnSeamstress",
      "names": {
        "english": "Seamstress",
        "french": "Seamstress"
      },
      "card_art": "@SeamstressCardArt",
      "cost": 2,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@Silksong",
      "pools": [
        "MegaPool",
        "UnitsAllBanner"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnSeamstressEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A skilled weaver who channels magical energy through her work with the Pinstress."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Seamstress",
      "names": {
        "english": "Seamstress",
        "french": "Seamstress"
      },
      "character_art": "@SeamstressCharacterArt",
      "size": 3,
      "health": 30,
      "attack_damage": 30,
      "subtypes": [
        "@Pinstress",
        "SubtypesData_BannerUnit"
      ],
      "triggers": [
        {
          "id": "@SeamstressSpawnTrigger"
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "SeamstressSpawnTrigger",
      "trigger": "on_spawn",
      "descriptions": {
        "english": "[Silk_Song_Clan.Plugin_Combo] with Pinstress Subtype: Gain \"[conduit]: [effect1.upgrade.status0.power]\""
      },
      "effects": [
        {
          "id": "@SeamstressComboEffect"
        },
        {
          "id": "@SeamstressSpawnEffect"
        }
      ]
    }
  ],
  "upgrade_masks": [
    {
      "id": "SeamstressComboPinstressMask",
      "required_subtypes": [
        "@Pinstress"
      ]
    }
  ],
  "upgrades": [
    {
      "id": "SeamstressComboUpgrade",
      "status_effect_upgrades": [
        {
          "status": "conduit",
          "count": 10
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnSeamstressEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "param_character": "@Seamstress"
    },
    {
      "id": "SeamstressComboEffect",
      "name": "@CardEffectTestLastCard",
      "target_mode": "self",
      "should_test": true,
      "should_cancel_subsequent_effects_if_test_fails": true,
      "param_card_filter": "@SeamstressComboPinstressMask",
      "additional_tooltips": [
        "@ComboTooltip"
      ]
    },
    {
      "id": "SeamstressSpawnEffect",
      "name": "CardEffectAddTempCardUpgradeToUnits",
      "target_mode": "self",
      "target_team": "monsters",
      "param_upgrade": "@SeamstressComboUpgrade"
    }
  ],
  "sprites": [
    {
      "id": "SeamstressCardArt",
      "path": "textures/SeamstressCardArt.png"
    },
    {
      "id": "SeamstressCharacterArt",
      "path": "textures/SeamstressCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "SeamstressCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@SeamstressCardArt"
        }
      }
    },
    {
      "id": "SeamstressCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@SeamstressCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 0.2,
              "z": 0
            },
            "scale": {
              "x": 1.3,
              "y": 1.3,
              "z": 1
            }
          }
        }
      }
    }
  ]
}
