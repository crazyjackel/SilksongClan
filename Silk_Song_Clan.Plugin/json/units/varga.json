{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnVarga",
      "names": {
        "english": "Varga",
        "chinese": "瓦尔加",
        "french": "Varga"
      },
      "card_art": "@VargaCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "common",
      "class": "@Silksong",
      "unlock_level": 2,
      "pools": [
        "MegaPool"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnVargaEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A rallying flea that speeds up the cooldowns of all units when working with the Fleamaster."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Varga",
      "names": {
        "english": "Varga",
        "french": "Varga"
      },
      "character_art": "@VargaCharacterArt",
      "size": 1,
      "health": 20,
      "attack_damage": 15,
      "subtypes": [
        "@Flea"
      ],
      "triggers": [
        {
          "id": "@VargaSpawnTrigger"
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "VargaSpawnTrigger",
      "trigger": "on_spawn",
      "descriptions": {
        "english": "<b>Combo Fleamaster Mooshka</b>: <b>Rally</b>: If it was a flea, Reduce all Unit Cooldowns by 1."
      },
      "effects": [
        {
          "id": "@VargaSpawnEffect"
        }
      ]
    },
    {
      "id": "VargaRallyTrigger",
      "trigger": "card_monster_played",
      "effects": [
        {
          "id": "@VargaReduceCooldownsEffect"
        }
      ]
    }
  ],
  "upgrade_masks": [
    {
      "id": "VargaComboFleaMask",
      "required_subtypes": [
        "@Flea"
      ]
    }
  ],
  "upgrades": [
    {
      "id": "VargaComboUpgrade",
      "trigger_upgrades": [
        {
          "id": "@VargaRallyTrigger"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnVargaEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@Varga"
    },
    {
      "id": "VargaSpawnEffect",
      "name": "@CardEffectAddCardUpgradeToUnitsOnLastCard",
      "target_mode": "self",
      "target_team": "monsters",
      "param_upgrade": "@VargaComboUpgrade",
      "param_card_filter": "@VargaComboFleaMask"
    },
    {
      "id": "VargaReduceCooldownsEffect",
      "name": "CardEffectAdjustAbilityCooldown",
      "target_mode": "room",
      "target_team": "monsters",
      "param_int": -1,
      "param_bool": false
    }
  ],
  "sprites": [
    {
      "id": "VargaCardArt",
      "path": "textures/VargaCardArt.png"
    },
    {
      "id": "VargaCharacterArt",
      "path": "textures/VargaCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "VargaCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@VargaCardArt"
        }
      }
    },
    {
      "id": "VargaCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@VargaCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.5,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
  ]
}