{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnBallow",
      "names": {
        "english": "Ballow",
        "french": "Ballow"
      },
      "card_art": "@BallowCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "common",
      "class": "@Silksong",
      "pools": [
        "MegaPool"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnBallowEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": " Talk to the boss!"
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Ballow",
      "size": 2,
      "health": 15,
      "attack": 5,
      "subtypes": ["@Bug"],
      "triggers": [
        {
          "id": "@BallowEquippedTrigger"
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "BallowEquippedTrigger",
      "descriptions": {
        "english": "Give Friendly Units [imbue] [effect0.status0.power]."
      },
      "trigger": "on_equipment_added_to_ally",
      "effects": [
        {
          "id": "@BallowApplyImbue"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnBallowEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "param_character": "@Ballow"
    },
    {
      "id": "BallowApplyImbue",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "room",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "@Imbue",
          "count": 5
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "BallowCardArt",
      "path": "textures/BallowCardArt.png"
    },
    {
      "id": "BallowCharacterArt",
      "path": "textures/BallowCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "BallowCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@BallowCardArt"
        }
      }
    },
    {
      "id": "BallowCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@BallowCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.5,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
  ]
}
