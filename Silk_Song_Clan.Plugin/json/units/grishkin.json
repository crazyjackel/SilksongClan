{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnGrishkin",
      "names": {
        "english": "Grishkin",
        "chinese": "格里希金",
        "french": "Grishkin"
      },
      "card_art": "@GrishkinCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "common",
      "class": "@Silksong",
      "unlock_level": 2,
      "pools": [
        "UnitsAllBanner"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnGrishkinEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A small but mighty flea that grows stronger when working with the Fleamaster."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Grishkin",
      "size": 1,
      "health": 15,
      "attack": 20,
      "subtypes": ["@Flea"],
      "triggers": [
        {
          "id": "@GrishkinSpawnTrigger"
        }
      ]
    }
  ],
  "upgrade_masks": [
    {
      "id": "GrishkinUpgradeMask",
      "required_subtypes": ["@Flea"]
    }
  ],
  "upgrades": [
    {
      "id": "GrishkinComboUpgrade",
      "trigger_upgrades": [
        {
          "id": "@GrishkinShiftTrigger"
        }
      ]
    },
    {
      "id": "GrishkinBuffFleasUpgrade",
      "bonus_damage": 3,
      "bonus_health": 3
    }
  ],
  "character_triggers": [
    {
      "id": "GrishkinSpawnTrigger",
      "descriptions": {
        "english": "<b>Combo Flea</b>: <b>Shift</b>: Give Friendly Fleas +3 [attack] and +3 [health]"
      },
      "trigger": "on_spawn",
      "effects": [
        {
          "id": "@GrishkinComboEffect"
        }
      ]
    },
    {
      "id": "GrishkinShiftTrigger",
      "descriptions": {
        "english": "Give Friendly Fleas +[effect0.upgrade.bonusdamage] [attack] and +[effect0.upgrade.bonushealth] [health]."
      },
      "trigger": "on_shift",
      "effects": [
        {
          "id": "@GrishkinBuffFleasEffect"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnGrishkinEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "param_character": "@Grishkin"
    },
    {
      "id": "GrishkinComboEffect",
      "name": "@CardEffectAddCardUpgradeToUnitsOnLastCard",
      "target_mode": "self",
      "param_upgrade": "@GrishkinComboUpgrade",
      "param_card_filter": "@GrishkinUpgradeMask"
    },
    {
      "id": "GrishkinBuffFleasEffect",
      "name": "@CardEffectAddCardUpgradeToUnitsFilter",
      "target_mode": "room",
      "target_team": "monsters",
      "param_upgrade": "@GrishkinBuffFleasUpgrade",
      "param_card_filter": "@GrishkinUpgradeMask"
    }
  ],
  "sprites": [
    {
      "id": "GrishkinCardArt",
      "path": "textures/GrishkinCardArt.png"
    },
    {
      "id": "GrishkinCharacterArt",
      "path": "textures/GrishkinCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "GrishkinCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@GrishkinCardArt"
        }
      }
    },
    {
      "id": "GrishkinCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@GrishkinCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.5,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
  ]
}
