{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnPinmasterPlinney",
      "names": {
        "english": "Pinmaster Plinney",
        "chinese": "针匠大师 普林尼",
        "french": "Pinmaster Plinney"
      },
      "card_art": "@PinmasterPlinneyCardArt",
      "cost": 2,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@Silksong",
      "pools": [
        "UnitsAllBanner"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnPinmasterPlinneyEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A skilled craftsman who can sharpen weapons and imbue them with magical energy."
        }
      ]
    },
    {
      "id": "PinmasterAbilityTrigger",
      "names": {
        "english": "Sharpen",
        "chinese": "磨砺"
      },
      "descriptions": {
        "english": "Spend [effect0.powerabs] [coin]. Give a friendly unit [Silk_Song_Clan.Plugin_PermanentImbue] [effect1.status0.power].",
        "chinese": "花费 [effect0.powerabs][coin]。使一个友方单位[Silk_Song_Clan.Plugin_PermanentImbue] [effect1.status0.power]。"
      },
      "is_an_ability": true,
      "cooldown": 5,
      "initial_cooldown": 0,
      "targetless": false,
      "effects": [
        {
          "id": "@PinmasterSpendGoldEffect"
        },
        {
          "id": "@PinmasterSharpenEffect"
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "PinmasterPlinney",
      "names": {
        "english": "Pinmaster Plinney",
        "chinese": "针匠大师 普林尼",
        "french": "Pinmaster Plinney"
      },
      "character_art": "@PinmasterPlinneyCharacterArt",
      "size": 2,
      "health": 12,
      "attack_damage": 12,
      "subtypes": [
        "@Bug",
        "SubtypesData_BannerUnit"
      ],
      "ability": "@PinmasterAbilityTrigger"
    }
  ],
  "effects": [
    {
      "id": "SpawnPinmasterPlinneyEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@PinmasterPlinney"
    },
    {
      "id": "PinmasterSpendGoldEffect",
      "name": "CardEffectRewardGold",
      "target_mode": "self",
      "param_int": -30,
      "should_test": true,
      "should_cancel_subsequent_effects_if_test_fails": true
    },
    {
      "id": "PinmasterSharpenEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "drop_target_character",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "@PermanentImbue",
          "count": 8
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "PinmasterPlinneyCardArt",
      "path": "textures/PinmasterPlinneyCardArt.png"
    },
    {
      "id": "PinmasterPlinneyCharacterArt",
      "path": "textures/PinmasterPlinneyCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "PinmasterPlinneyCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@PinmasterPlinneyCardArt"
        }
      }
    },
    {
      "id": "PinmasterPlinneyCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@PinmasterPlinneyCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 0.9,
              "z": 0
            },
            "scale": {
              "x": 1.2,
              "y": 1.2,
              "z": 1
            }
          }
        }
      }
    }
  ]
}