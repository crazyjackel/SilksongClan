{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnYarnaby",
      "names": {
        "english": "Yarnaby",
        "chinese": "雅纳碧",
        "french": "Yarnaby"
      },
      "card_art": "@YarnabyCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "rare",
      "class": "@Silksong",
      "unlock_level": 9,
      "pools": [
        "MegaPool",
        "UnitsAllBanner"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnYarnabyEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A bug that gains lifesteal through hunger and can share it with allies when working with Crull and Benjin."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Yarnaby",
      "names": {
        "english": "Yarnaby",
        "chinese": "雅纳碧",
        "french": "Yarnaby"
      },
      "character_art": "@YarnabyCharacterArt",
      "size": 1,
      "health": 8,
      "attack_damage": 8,
      "subtypes": [
        "@Bug"
      ],
      "starting_status_effects": [
        {
          "status": "lifesteal",
          "count": 3
        }
      ],
      "triggers": [
        {
          "id": "@YarnabyHungerTrigger"
        },
        {
          "id": "@YarnabySpawnTrigger"
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "YarnabyHungerTrigger",
      "descriptions": {
        "english": "Gain [lifesteal] [effect0.status0.power]."
      },
      "trigger": "on_food_spawn",
      "effects": [
        {
          "id": "@YarnabyHungerEffect"
        }
      ]
    },
    {
      "id": "YarnabySpawnTrigger",
      "trigger": "on_spawn",
      "descriptions": {
        "english": "<b>Combo Crull and Benjin</b>: <b>Strike</b>: Front Unit gets Lifesteal 1."
      },
      "effects": [
        {
          "id": "@YarnabySpawnEffect"
        }
      ]
    },
    {
      "id": "YarnabyStrikeTrigger",
      "trigger": "on_hit",
      "effects": [
        {
          "id": "@YarnabyStrikeEffect"
        }
      ]
    }
  ],
  "upgrades": [
    {
      "id": "YarnabyComboUpgrade",
      "trigger_upgrades": [
        {
          "id": "@YarnabyStrikeTrigger"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnYarnabyEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@Yarnaby"
    },
    {
      "id": "YarnabyHungerEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "self",
      "param_status_effects": [
        {
          "status": "lifesteal",
          "count": 1
        }
      ]
    },
    {
      "id": "YarnabySpawnEffect",
      "name": "@CardEffectAddCardUpgradeToUnitsOnLastCardName",
      "target_mode": "self",
      "target_team": "monsters",
      "param_upgrade": "@YarnabyComboUpgrade",
      "param_str": "@SpawnCrullAndBenjin"
    },
    {
      "id": "YarnabyStrikeEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "front_in_room",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "lifesteal",
          "count": 1
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "YarnabyCardArt",
      "path": "textures/YarnabyCardArt.png"
    },
    {
      "id": "YarnabyCharacterArt",
      "path": "textures/YarnabyCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "YarnabyCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@YarnabyCardArt"
        }
      }
    },
    {
      "id": "YarnabyCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@YarnabyCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.5,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
  ]
}