{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnYarnaby",
      "names": {
        "english": "Yarnaby",
        "chinese": "雅纳碧",
        "french": "Yarnaby"
      },
      "card_art": "@YarnabyCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "rare",
      "class": "@Silksong",
      "unlock_level": 9,
      "pools": [
        "MegaPool",
        "UnitsAllBanner"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnYarnabyEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "Bzzt! Bravo! A specimen who sees my brilliance! ",
          "chinese": "嗡嗡！好样的！终于有虫识得我的才华了！"
        }
      ]
    },
    {
      "id": "YarnabyAbility",
      "names": {
        "english": "Operate",
        "chinese": "手术"
      },
      "descriptions": {
        "english": "Deal [effect0.power] damage. Apply [lifesteal] [effect1.status0.power].",
        "chinese": "造成 [effect0.power] 点伤害。施加[lifesteal] [effect1.status0.power]。"
      },
      "is_an_ability": true,
      "cooldown": 2,
      "initial_cooldown": 0,
      "targetless": false,
      "targets_room": true,
      "effects": [
        "@YarnabyAbilityDamageEffect",
        "@YarnabyAbilityLifestealEffect"
      ]
    }
  ],
  "characters": [
    {
      "id": "Yarnaby",
      "names": {
        "english": "Yarnaby",
        "chinese": "雅纳碧",
        "french": "Yarnaby"
      },
      "character_art": "@YarnabyCharacterArt",
      "size": 1,
      "health": 16,
      "attack_damage": 17,
      "subtypes": [
        "@Bug",
        "SubtypesData_BannerUnit"
      ],
      "starting_status_effects": [
        {
          "status": "lifesteal",
          "count": 3
        }
      ],
      "triggers": [
        {
          "id": "@YarnabyStrikeTrigger"
        }
      ],
      "ability": "@YarnabyAbility"
    }
  ],
  "character_triggers": [
    {
      "id": "YarnabyStrikeTrigger",
      "descriptions": {
        "english": "Add a random uncommon or rare Morsel to Hand.",
        "chinese": "将 1 个高级或稀有[snack]单位加入你的手牌。"
      },
      "trigger": "on_kill",
      "effects": [
        {
          "id": "@YarnabyStrikeMorselEffect"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnYarnabyEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@Yarnaby"
    },
    {
      "id": "YarnabyAbilityDamageEffect",
      "name": "CardEffectDamage",
      "target_mode": "drop_target_character",
      "target_team": "both",
      "param_int": 15
    },
    {
      "id": "YarnabyAbilityLifestealEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "last_targeted_characters",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "lifesteal",
          "count": 1
        }
      ]
    },
    {
      "id": "YarnabyStrikeMorselEffect",
      "name": "CardEffectAddBattleCard",
      "param_card_pool": "@MorselPool",
      "param_int": 3,
      "param_int_2": 1
    }
  ],
  "sprites": [
    {
      "id": "YarnabyCardArt",
      "path": "textures/YarnabyCardArt.png"
    },
    {
      "id": "YarnabyCharacterArt",
      "path": "textures/YarnabyCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "YarnabyCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@YarnabyCardArt"
        }
      }
    },
    {
      "id": "YarnabyCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@YarnabyCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.4,
              "z": 0
            },
            "scale": {
              "x": 1.1,
              "y": 1.1,
              "z": 1
            }
          }
        }
      }
    }
  ]
}