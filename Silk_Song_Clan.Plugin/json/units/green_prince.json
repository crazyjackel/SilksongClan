{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnGreenPrince",
      "names": {
        "english": "Green Prince",
        "chinese": "翠绿王子",
        "french": "Green Prince"
      },
      "card_art": "@GreenPrinceCardArt",
      "cost": 3,
      "card_type": "monster",
      "rarity": "rare",
      "class": "@Silksong",
      "unlock_level": 6,
      "pools": [
        "MegaPool"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnGreenPrinceEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A royal warrior who creates frozen copies of himself through the Silksong connection."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "GreenPrince",
      "size": 3,
      "health": 40,
      "attack": 60,
      "subtypes": ["@Bug"],
      "starting_status_effects": [
        {
          "status": "@Warrior",
          "count": 1
        }
      ],
      "triggers": [
        {
          "id": "@GreenPrinceSilksongTrigger"
        }
      ]
    }
  ],
  "upgrades": [
    {
      "id": "GreenPrinceCopyUpgrade",
      "status_effect_upgrades": [
        {
          "status": "fragile",
          "count": 1
        }
      ],
      "trait_upgrades": [
        "@GreenPrinceFrozen",
        "@GreenPrinceEphemeral"
      ]
    }
  ],
  "traits": [
    {
      "id": "GreenPrinceFrozen",
      "name": "CardTraitFreeze"
    },
    {
      "id": "GreenPrinceEphemeral",
      "name": "CardTraitEphemeral"
    }
  ],
  "character_triggers": [
    {
      "id": "GreenPrinceSilksongTrigger",
      "descriptions": {
        "english": "Add a Frozen, Ephemeral Copy with [fragile] to your hand."
      },
      "trigger": "@Silksong",
      "effects": [
        {
          "id": "@GreenPrinceCreateCopyEffect"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnGreenPrinceEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "param_character": "@GreenPrince"
    },
    {
      "id": "GreenPrinceCreateCopyEffect",
      "name": "CardEffectAddUnitCard",
      "param_int": 3,
      "param_upgrade": "@GreenPrinceCopyUpgrade",
      "copy_modifiers_from_source": true
    }
  ],
  "sprites": [
    {
      "id": "GreenPrinceCardArt",
      "path": "textures/GreenPrinceCardArt.png"
    },
    {
      "id": "GreenPrinceCharacterArt",
      "path": "textures/GreenPrinceCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "GreenPrinceCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@GreenPrinceCardArt"
        }
      }
    },
    {
      "id": "GreenPrinceCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@GreenPrinceCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.5,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
  ]
}
