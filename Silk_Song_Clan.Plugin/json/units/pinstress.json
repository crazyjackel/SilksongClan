{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnPinstress",
      "names": {
        "english": "Pinstress",
        "chinese": "珠针女士",
        "french": "Pinstress"
      },
      "card_art": "@PinstressCardArt",
      "cost": 2,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@Silksong",
      "pools": [
        "MegaPool"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnPinstressEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A master weaver who gains magical energy with each strike when working with another Pinstress."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Pinstress",
      "names": {
        "english": "Pinstress",
        "chinese": "珠针女士",
        "french": "Pinstress"
      },
      "character_art": "@PinstressCharacterArt",
      "size": 3,
      "health": 50,
      "attack_damage": 30,
      "subtypes": [
        "@Pinstress"
      ],
      "triggers": [
        {
          "id": "@PinstressSpawnTrigger"
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "PinstressSpawnTrigger",
      "trigger": "on_spawn",
      "descriptions": {
        "english": "<b>Combo Pinstress</b>, <b>Strike</b>: Gain [conduit] 1"
      },
      "effects": [
        {
          "id": "@PinstressSpawnEffect"
        }
      ]
    },
    {
      "id": "PinstressStrikeTrigger",
      "trigger": "on_hit",
      "effects": [
        {
          "id": "@PinstressStrikeEffect"
        }
      ]
    }
  ],
  "upgrade_masks": [
    {
      "id": "PinstressComboPinstressMask",
      "required_subtypes": [
        "@Pinstress"
      ]
    }
  ],
  "upgrades": [
    {
      "id": "PinstressComboUpgrade",
      "trigger_upgrades": [
        {
          "id": "@PinstressStrikeTrigger"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnPinstressEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "param_character": "@Pinstress"
    },
    {
      "id": "PinstressSpawnEffect",
      "name": "@CardEffectAddCardUpgradeToUnitsOnLastCard",
      "target_mode": "self",
      "target_team": "monsters",
      "param_upgrade": "@PinstressComboUpgrade",
      "param_card_filter": "@PinstressComboPinstressMask"
    },
    {
      "id": "PinstressStrikeEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "self",
      "param_status_effects": [
        {
          "status": "conduit",
          "count": 1
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "PinstressCardArt",
      "path": "textures/PinstressCardArt.png"
    },
    {
      "id": "PinstressCharacterArt",
      "path": "textures/PinstressCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "PinstressCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@PinstressCardArt"
        }
      }
    },
    {
      "id": "PinstressCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@PinstressCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.5,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
  ]
}