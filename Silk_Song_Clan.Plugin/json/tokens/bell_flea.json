{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
    "cards": [
        {
            "id": "SpawnBellFlea",
            "names": {
                "english": "Bell Flea",
                "chinese": "钟蚤"
            },
            "card_art": "@BellFleaCardArt",
            "cost": 1,
            "card_type": "monster",
            "rarity": "common",
            "class": "@Silksong",
            "targets_room": true,
            "effects": [
                {
                    "id": "@SpawnBellFleaEffect"
                }
            ],
            "lore_tooltips": [
                {
                    "english": "A flea with a protective bell that provides damage shields to the swarm."
                }
            ]
        }
    ],
    "characters": [
        {
            "id": "BellFlea",
            "names": {
                "english": "Bell Flea",
                "chinese": "钟蚤"
            },
            "character_art": "@BellFleaCharacterArt",
            "size": 1,
            "health": 5,
            "attack_damage": 5,
            "subtypes": [
                "@Flea"
            ],
            "starting_status_effects": [
                {
                    "status": "damage shield",
                    "count": 2
                }
            ],
            "triggers": [
                {
                    "id": "@BellFleaShiftTrigger"
                }
            ]
        }
    ],
    "character_triggers": [
        {
            "id": "BellFleaShiftTrigger",
            "descriptions": {
                "english": "Friendly Units get +[effect0.upgrade.bonusdamage][attack] and +[effect0.upgrade.bonushp][health].",
                "chinese": "友方单位获得 +[effect0.upgrade.bonusdamage][attack]，+[effect0.upgrade.bonushp][health]。"
            },
            "trigger": "on_shift",
            "effects": [
                {
                    "id": "@BellFleaPetEffect"
                }
            ]
        }
    ],
    "upgrades": [
        {
            "id": "BellFleaPetUpgrade",
            "bonus_damage": 1,
            "bonus_hp": 1
        }
    ],
    "effects": [
        {
            "id": "SpawnBellFleaEffect",
            "name": "CardEffectSpawnMonster",
            "target_mode": "drop_target_character",
            "param_character": "@BellFlea"
        },
        {
            "id": "BellFleaPetEffect",
            "name": "CardEffectAddCardUpgradeToUnits",
            "target_mode": "room",
            "target_team": "monsters",
            "param_upgrade": "@BellFleaPetUpgrade"
        }
    ],
    "sprites": [
        {
            "id": "BellFleaCardArt",
            "path": "textures/BellFleaCardArt.png"
        },
        {
            "id": "BellFleaCharacterArt",
            "path": "textures/BellFleaCharacterArt.png"
        }
    ],
    "game_objects": [
        {
            "id": "BellFleaCardArt",
            "type": "card_art",
            "extensions": {
                "card_art": {
                    "sprite": "@BellFleaCardArt"
                }
            }
        },
        {
            "id": "BellFleaCharacterArt",
            "type": "character_art",
            "extensions": {
                "character_art": {
                    "sprite": "@BellFleaCharacterArt",
                    "transform": {
                        "position": {
                            "x": 0,
                            "y": 0.5,
                            "z": 0
                        },
                        "scale": {
                            "x": 1.5,
                            "y": 1.5,
                            "z": 1
                        }
                    }
                }
            }
        }
    ]
}