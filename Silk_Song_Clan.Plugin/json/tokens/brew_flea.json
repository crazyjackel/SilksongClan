{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
    "cards": [
        {
            "id": "SpawnBrewFlea",
            "names": {
                "english": "Brew Flea",
                "chinese": "酿蚤"
            },
            "card_art": "@BrewFleaCardArt",
            "cost": 1,
            "card_type": "monster",
            "rarity": "common",
            "class": "@Silksong",
            "targets_room": true,
            "effects": [
                {
                    "id": "@SpawnBrewFleaEffect"
                }
            ],
            "lore_tooltips": [
                {
                    "english": "A quick flea that brews up power for the swarm with its enhanced abilities."
                }
            ]
        }
    ],
    "characters": [
        {
            "id": "BrewFlea",
            "names": {
                "english": "Brew Flea",
                "chinese": "酿蚤"
            },
            "character_art": "@BrewFleaCharacterArt",
            "size": 1,
            "health": 5,
            "attack_damage": 5,
            "subtypes": [
                "@Flea"
            ],
            "starting_status_effects": [
                {
                    "status": "ambush",
                    "count": 1
                }
            ],
            "triggers": [
                {
                    "id": "@BrewFleaShiftTrigger"
                },
                {
                    "id": "@BrewFleaStrikeTrigger"
                }
            ]
        }
    ],
    "character_triggers": [
        {
            "id": "BrewFleaShiftTrigger",
            "descriptions": {
                "english": "Friendly Units get +[effect0.upgrade.bonusdamage][attack] and +[effect0.upgrade.bonushp][health].",
                "chinese": "蚤民单位获得 +[effect0.upgrade.bonusdamage][attack]，+[effect0.upgrade.bonushp][health]。"
            },
            "trigger": "on_shift",
            "effects": [
                {
                    "id": "@BrewFleaPetEffect"
                }
            ]
        },
        {
            "id": "BrewFleaStrikeTrigger",
            "descriptions": {
                "english": "[advance].",
                "chinese": "[advance]。"
            },
            "trigger": "on_hit",
            "effects": [
                {
                    "id": "@BrewFleaAdvanceEffect"
                }
            ]
        }
    ],
    "upgrades": [
        {
            "id": "BrewFleaPetUpgrade",
            "bonus_damage": 1,
            "bonus_hp": 1
        }
    ],
    "effects": [
        {
            "id": "SpawnBrewFleaEffect",
            "name": "CardEffectSpawnMonster",
            "target_mode": "drop_target_character",
            "param_character": "@BrewFlea"
        },
        {
            "id": "BrewFleaPetEffect",
            "name": "CardEffectAddCardUpgradeToUnits",
            "target_mode": "room",
            "target_team": "monsters",
            "param_upgrade": "@BrewFleaPetUpgrade"
        },
        {
            "id": "BrewFleaAdvanceEffect",
            "name": "CardEffectFloorRearrange",
            "target_mode": "self",
            "target_team": "monsters",
            "param_int": 0
        }
    ],
    "sprites": [
        {
            "id": "BrewFleaCardArt",
            "path": "textures/BellFleaCardArt.png"
        },
        {
            "id": "BrewFleaCharacterArt",
            "path": "textures/BellFleaCharacterArt.png"
        }
    ],
    "game_objects": [
        {
            "id": "BrewFleaCardArt",
            "type": "card_art",
            "extensions": {
                "card_art": {
                    "sprite": "@BrewFleaCardArt"
                }
            }
        },
        {
            "id": "BrewFleaCharacterArt",
            "type": "character_art",
            "extensions": {
                "character_art": {
                    "sprite": "@BrewFleaCharacterArt",
                    "transform": {
                        "position": {
                            "x": 0,
                            "y": 0.5,
                            "z": 0
                        },
                        "scale": {
                            "x": 1.5,
                            "y": 1.5,
                            "z": 1
                        }
                    }
                }
            }
        }
    ]
}
