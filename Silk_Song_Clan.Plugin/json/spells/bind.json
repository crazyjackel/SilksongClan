{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "Bind",
      "names": {
        "english": "Bind"
      },
      "descriptions": {
        "english": "Channel [effect0.powerabs] [Silk_Song_Clan.Plugin_Silk]. [Silk_Song_Clan.Plugin_Bind]. Restore [effect2.power] health."
      },
      "cost": 0,
      "card_type": "spell",
      "rarity": "common",
      "class": "@Silksong",
      "card_art": "@BindCardArt",
      "pools": [
        "MegaPool"
      ],
      "effects": [
        {
          "id": "@BindRewardSilkEffect"
        },
        {
          "id": "@BindBindEffect"
        },
        {
          "id": "@BindHealEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "Through inserting silk deep inside a bug's shell, they are restored to fight another day."
        }
      ],
      "extensions":
      [
        {
          "silksong": {
            "silk_cost": 6
          }
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "BindRewardSilkEffect",
      "name": "@CardEffectRewardSilk",
      "target_mode": "self",
      "param_int": -6,
      "should_test": true,
      "should_fail_to_cast_if_test_fails": true
    },
    {
      "id": "BindBindEffect",
      "name": "@CardEffectBind",
      "target_mode": "drop_target_character",
      "target_team": "monsters",
      "additional_tooltips": [
        {
          "id": "@BindBindEffectTooltip"
        }
      ]
    },
    {
      "id": "BindHealEffect",
      "name": "CardEffectHeal",
      "target_mode": "drop_target_character",
      "target_team": "monsters",
      "param_int": 60
    }
  ],
  "sprites": [
    {
      "id": "BindCardArt",
      "path": "textures/BindCardArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "BindCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@BindCardArt"
        }
      }
    }
  ]
}
