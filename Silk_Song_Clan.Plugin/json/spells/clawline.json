      "card_type": "spell",
      "rarity": "uncommon",
      "class": "@Silksong",
      "card_art": "@ClawlineCardArt",
      "targetless": true,
      "targets_room": true,
      "pools": [
        "MegaPool"
      ],
      "effects": [
        {
          "id": "@ClawlineDamageEffect"
        },
        {
          "id": "@ClawlineAdvanceEffect"
        },
        {
          "id": "@ClawlineGainSilkEffect"
        }
      ],
      "traits": [
        "@ClawlineScaleSilk"
      ],
      "lore_tooltips": [
        {
          "english": "A focused strike that channels silk energy into a devastating claw attack."
        }
      ]
    }
  ],
  "traits": [
    {
      "id": "ClawlineScaleSilk",
      "name": "CardTraitScalingAddDamage",
      "param_tracked_value": "@Silk",
      "param_int": 1,
      "param_float": 3.00
    }
  ],
  "effects": [
    {
      "id": "ClawlineGainSilkEffect",
