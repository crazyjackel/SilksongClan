{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "SharpDart",
      "names": {
        "english": "Sharp Dart",
        "chinese": "锐丝突击"
      },
      "descriptions": {
        "english": "Channel [effect0.powerabs] [Silk_Song_Clan.Plugin_Silk]. [advance]. Attack with a friendly unit.",
        "chinese": "灌注 [effect0.powerabs] [Silk_Song_Clan.Plugin_Silk]。[advance]。使一个友方单位立即发动攻击。"
      },
      "cost": 0,
      "card_type": "spell",
      "rarity": "uncommon",
      "class": "@Silksong",
      "card_art": "@SharpDartCardArt",
      "targetless": false,
      "targets_room": true,
      "pools": [
        "MegaPool"
      ],
      "effects": [
        {
          "id": "@SharpDartChannelSilkEffect"
        },
        {
          "id": "@SharpDartStrikeEffect"
        },
        {
          "id": "@SharpDartAdvanceEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A sharp dart that energizes a unit to strike."
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SharpDartChannelSilkEffect",
      "name": "@CardEffectRewardSilk",
      "target_mode": "self",
      "param_int": -4,
      "should_test": true,
      "should_fail_to_cast_if_test_fails": true,
      "additional_tooltips": [
        "@SilkTooltip",
        "@SilkChannelTooltip"
      ]
    },
    {
      "id": "SharpDartStrikeEffect",
      "name": "CardEffectAttackWithUnit",
      "target_mode": "drop_target_character",
      "target_team": "monsters"
    },
    {
      "id": "SharpDartAdvanceEffect",
      "name": "CardEffectFloorRearrange",
      "target_mode": "last_targeted_characters",
      "target_team": "monsters",
      "param_int": 0
    }
  ],
  "sprites": [
    {
      "id": "SharpDartCardArt",
      "path": "textures/SharpDartCardArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "SharpDartCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@SharpDartCardArt"
        }
      }
    }
  ]
}

