{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "RuneRage",
      "names": {
        "english": "Rune Rage",
        "chinese": "符文之怒"
      },
      "descriptions": {
        "english": "Channel [effect0.powerabs] [Silk_Song_Clan.Plugin_Silk]. Give Friendly Units [rage] [effect1.status0.power] and Enemies [frostbite] [effect2.status0.power].",
        "chinese": "灌注 [effect0.powerabs][Silk_Song_Clan.Plugin_Silk]。所有友方单位获得[rage] [effect1.status0.power]。对所有敌方单位施加[frostbite] [effect2.status0.power]。"
      },
      "cost": 1,
      "card_type": "spell",
      "rarity": "uncommon",
      "class": "@Silksong",
      "card_art": "@RuneRageCardArt",
      "targetless": true,
      "targets_room": true,
      "pools": [
        "MegaPool"
      ],
      "effects": [
        {
          "id": "@RuneRageChannelSilkEffect"
        },
        {
          "id": "@RuneRageRageEffect"
        },
        {
          "id": "@RuneRagePoisonEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A powerful rune that enrages allies and freezes enemies."
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "RuneRageChannelSilkEffect",
      "name": "@CardEffectRewardSilk",
      "target_mode": "self",
      "param_int": -6,
      "should_test": true,
      "should_fail_to_cast_if_test_fails": true,
      "additional_tooltips": [
        "@SilkTooltip",
        "@SilkChannelTooltip"
      ]
    },
    {
      "id": "RuneRageRageEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "room",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "buff",
          "count": 9
        }
      ]
    },
    {
      "id": "RuneRagePoisonEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "room",
      "target_team": "heroes",
      "param_status_effects": [
        {
          "status": "poison",
          "count": 9
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "RuneRageCardArt",
      "path": "textures/RuneRageCardArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "RuneRageCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@RuneRageCardArt"
        }
      }
    }
  ]
}

