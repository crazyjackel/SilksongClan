{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "CrossStitch",
      "names": {
        "english": "Cross Stitch",
        "chinese": "十字绣反击"
      },
      "descriptions": {
        "english": "Channel [effect0.powerabs] [Silk_Song_Clan.Plugin_Silk]. Apply [damageshield] [effect1.status0.power], [spikes] [effect2.status0.power] and [Silk_Song_Clan.Plugin_Protection] [effect3.status0.power] to a friendly unit.",
        "chinese": "消耗 [effect0.powerabs][Silk_Song_Clan.Plugin_Silk]。为友方单位应用 [damageshield] [effect1.status0.power]，[spikes] [effect2.status0.power] 和 [Silk_Song_Clan.Plugin_Protection] [effect3.status0.power]。"
      },
      "cost": 0,
      "card_type": "spell",
      "rarity": "uncommon",
      "class": "@Silksong",
      "card_art": "@CrossStitchCardArt",
      "targetless": false,
      "targets_room": true,
      "pools": [
        "MegaPool"
      ],
      "effects": [
        {
          "id": "@CrossStitchChannelSilkEffect"
        },
        {
          "id": "@CrossStitchProtectiveEffect"
        },
        {
          "id": "@CrossStitchThornsEffect"
        },
        {
          "id": "@CrossStitchProtectionEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A defensive stitch that protects allies and harms attackers."
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "CrossStitchChannelSilkEffect",
      "name": "@CardEffectRewardSilk",
      "target_mode": "self",
      "param_int": -4,
      "should_test": true,
      "should_fail_to_cast_if_test_fails": true,
      "additional_tooltips": [
        "@SilkTooltip",
        "@SilkChannelTooltip"
      ]
    },
    {
      "id": "CrossStitchProtectiveEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "drop_target_character",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "damage shield",
          "count": 2
        }
      ]
    },
    {
      "id": "CrossStitchThornsEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "drop_target_character",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "spikes",
          "count": 8
        }
      ]
    },
    {
      "id": "CrossStitchProtectionEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "drop_target_character",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "@Protection",
          "count": 8
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "CrossStitchCardArt",
      "path": "textures/CrossStitchCardArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "CrossStitchCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@CrossStitchCardArt"
        }
      }
    }
  ]
}

