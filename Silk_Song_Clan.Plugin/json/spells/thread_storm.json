{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/main/schemas/base.json",
  "cards": [
    {
      "id": "ThreadStorm",
      "names": {
        "english": "Thread Storm",
        "chinese": "灵丝风暴"
      },
      "descriptions": {
        "english": "Channel [effect0.powerabs] [Silk_Song_Clan.Plugin_Silk]. Deal [effect1.power] damage to the front unit, three times."
      },
      "cost": 1,
      "card_type": "spell",
      "rarity": "common",
      "class": "@Silksong",
      "card_art": "@ThreadStormCardArt",
      "targetless": true,
      "targets_room": true,
      "pools": [
        "MegaPool"
      ],
      "traits": [
        "@ThreadStormScaleEffectApplications",
        "@ThreadStormAttunedTrait"
      ],
      "effects": [
        {
          "id": "@ThreadStormChannelSilkEffect"
        },
        {
          "id": "@ThreadStormDamageEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "A storm of silk threads that ravages enemies."
        }
      ]
    }
  ],
  "traits": [
    {
      "id": "ThreadStormScaleEffectApplications",
      "name": "CardTraitScalingAddEffectApplications",
      "param_int": 3,
      "param_tracked_value": "any_character"
    },
    {
        "id": "ThreadStormAttunedTrait",
        "name": "CardTraitStrongerMagicPower"
    }
  ],
  "effects": [
    {
      "id": "ThreadStormChannelSilkEffect",
      "name": "@CardEffectRewardSilk",
      "target_mode": "self",
      "param_int": -4,
      "should_test": true,
      "should_fail_to_cast_if_test_fails": true,
      "additional_tooltips": [
        "@SilkTooltip",
        "@SilkChannelTooltip"
      ]
    },
    {
      "id": "ThreadStormDamageEffect",
      "name": "CardEffectDamage",
      "target_mode": "front_in_room",
      "target_team": "heroes",
      "param_int": 12
    }
  ],
  "sprites": [
    {
      "id": "ThreadStormCardArt",
      "path": "textures/ThreadStormCardArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "ThreadStormCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@ThreadStormCardArt"
        }
      }
    }
  ]
}

