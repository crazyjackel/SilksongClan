{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
    "relics": [
        {
            "id": "GuardianMemento",
            "type": "collectable",
            "names": {
                "english": "Guardian's Memento",
                "chinese": "守护者的信物"
            },
            "descriptions": {
                "english": "[Silk_Song_Clan.Plugin_Protection] and [Silk_Song_Clan.Plugin_Imbue] are not removed from being hit.",
