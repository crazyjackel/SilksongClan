            ],
            "extensions": [
                {
                    "collectable": {
                        "class": "@Silksong",
                        "rarity": "rare",
                        "pools": ["MegaRelicPool"]
                    }
                }
            ]
        }
    ],
    "relic_effects": [
        {
            "id": "GuardianMementoEffect",
            "name": "@RelicEffectAcrobatNotRemoved",
            "additional_tooltips": [
                "@ProtectionTooltip",
                "@ImbueTooltip"
            ]
        }
    ],
    "sprites": [
        {
            "id": "GuardianMementoIcon",
            "path": "textures/GuardianMementoIcon.png"
        }
    ]
