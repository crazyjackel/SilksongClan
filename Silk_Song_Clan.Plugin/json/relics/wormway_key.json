{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
    "relics": [
        {
            "id": "WormwayKey",
            "type": "collectable",
            "names": {
                "english": "Simple Key",
                "chinese": "简单钥匙"
            },
            "icon": "@WormwayKeyIcon",
            "icon_small": "@WormwayKeyIcon",
            "descriptions": {
                "english": "Rare and Champion Units gain +10 [attack] and +10 [health].",
                "chinese": "稀有和勇者单位获得 +10[attack]，+10[health]。"
            },
            "lore_tooltips": [
                {
                    "english": "Rusted key of common design. Can be used to open a variety of locks."
                }
            ],
            "relic_effects": [
                "@SimpleKeyEffect"
            ],
            "extensions": [
                {
                    "collectable": {
                        "class": "@Silksong",
                        "rarity": "rare"
                    }
                }
            ]
        }
    ],
    "upgrade_masks": [
        {
            "id": "SimpleKeyMask",
            "card_type": "monster",
            "required_rarities": ["rare", "champion"]
        }
    ],
    "relic_effects": [
        {
            "id": "SimpleKeyEffect",
            "name": "RelicEffectAddTempUpgrade",
            "param_upgrade": "@SimpleKeyUpgrade"
        }
    ],
    "upgrades": [
        {
            "id": "SimpleKeyUpgrade",
            "is_unique": true,
            "bonus_damage": 10,
            "bonus_health": 10,
            "filters": ["@SimpleKeyMask"]
        }
    ],
    "sprites": [
        {
            "id": "WormwayKeyIcon",
            "path": "textures/WormwayKeyIcon.png"
        }
    ]
