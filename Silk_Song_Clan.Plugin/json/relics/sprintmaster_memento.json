        }
    ],
    "relic_effects": [
        {
            "id": "SprintmasterMementoEffect",
            "name": "@RelicEffectDrawAdditionalNextTurnOnTrigger",
            "param_int": 1,
            "param_trigger": "on_own_ability_activated",
            "param_source_team": "monsters"
        }
    ],
    "sprites": [
        {
            "id": "SprintmasterMementoIcon",
            "path": "textures/SprintmasterMementoIcon.png"
        }
