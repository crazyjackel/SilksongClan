{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
    "relics": [
        {
            "id": "AcrobatStone",
            "type": "enhancer",
            "names": {
                "english": "Acrobat Stone"
            },
            "descriptions": {
                "english": "Gain '[incant]: Gain [Silk_Song_Clan.Plugin_Imbue] [effect0.upgrade0.charactertrigger0.effect0.status0.power] and [Silk_Song_Clan.Plugin_Protection] [effect0.upgrade0.charactertrigger0.effect1.status0.power].'",
                "chinese": "升级一个单位，使其获得'[incant]: 获得[Silk_Song_Clan.Plugin_Imbue] [effect0.upgrade0.charactertrigger0.effect0.status0.power] 和[Silk_Song_Clan.Plugin_Protection] [effect0.upgrade0.charactertrigger0.effect1.status0.power]。'"
            },
            "relic_effects": [
                "@AcrobatStoneEnhancer"
            ],
            "icon": "@AcrobatStoneIcon",
            "extensions": [
                {
                    "enhancer": {
                        "class": "@Silksong",
                        "pools": [
                            "UnitUpgradePoolCommon"
                        ],
                        "rarity": "common"
                    }
                }
            ]
        }
    ],
    "relic_effects": [
        {
            "id": "AcrobatStoneEnhancer",
            "name": "RelicEffectCardUpgrade",
            "param_card_type": "monster",
            "param_upgrade": "@AcrobatStoneUpgrade"
        }
    ],
    "upgrades": [
        {
            "id": "AcrobatStoneUpgrade",
            "titles": {
                "english": "Acrobat Stone"
            },
            "icon": "@AcrobatStoneIcon",
            "trigger_upgrades": [
                "@AcrobatStoneSpellTrigger"
            ],
            "use_upgrade_hightlight_tags": true
        }
    ],
    "character_triggers": [
        {
            "id": "AcrobatStoneSpellTrigger",
            "descriptions": {
                "english": "Gain [Silk_Song_Clan.Plugin_Imbue] [effect0.status0.power] and [Silk_Song_Clan.Plugin_Protection] [effect1.status0.power].",
                "chinese": "获得[Silk_Song_Clan.Plugin_Imbue] [effect0.status0.power] 和[Silk_Song_Clan.Plugin_Protection] [effect1.status0.power]。"
            },
            "trigger": "card_spell_played",
            "effects": ["@AcrobatStoneGainImbueEffect", "@AcrobatStoneGainProtectionEffect"]
        }
    ],
    "effects": [
        {
            "id": "AcrobatStoneGainImbueEffect",
            "name": "CardEffectAddStatusEffect",
            "target_mode": "self",
            "target_team": "monsters",
            "param_status_effects": [
                {
                    "status": "@Imbue",
                    "count": 3
                }
            ]
        },
        {
            "id": "AcrobatStoneGainProtectionEffect",
            "name": "CardEffectAddStatusEffect",
            "target_mode": "self",
            "target_team": "monsters",
            "param_status_effects": [
                {
                    "status": "@Protection",
                    "count": 3
                }
            ]
        }
    ],
    "sprites": [
        {
            "id": "AcrobatStoneIcon",
            "path": "textures/AcrobatStoneIcon.png"
        }
    ],
    "atlas_icons": [
        {
            "id": "AcrobatStoneIcon",
            "path": "textures/AcrobatStoneIcon.png"
        }
    ]
}
