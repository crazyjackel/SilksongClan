{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
    "relics": [
        {
            "id": "SnailStone",
            "type": "enhancer",
            "names": {
                "english": "Snail Stone",
                "chinese": "蜗牛石"
            },
            "descriptions": {
                "english": "Upgrade a silk-based spell with +[effect0.upgrade0.bonusdamage] [magicpower] and gain [juice].",
